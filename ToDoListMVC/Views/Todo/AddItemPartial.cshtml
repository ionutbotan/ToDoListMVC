@model TodoItem

<form asp-action="AddItem" method="POST">
    <div class="form-row">
        <div class="form-group col">
            <label class="sr-only" asp-for="Title">Add a new item:</label>
            <input class="form-control" placeholder="Add a new item" asp-for="Title">
        </div>
        <div class="form-group col-2">
            <button type="submit" class="btn btn-outline-secondary btn-block">Add</button>
        </div>
    </div>
</form>